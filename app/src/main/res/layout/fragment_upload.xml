<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.workmanagerui.UploadFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/workstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/hello_blank_fragment" />

    <Button
        android:id="@+id/oneTime"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="One Time Task"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/workstatus"/>

    <Button
        android:id="@+id/periodicTask"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="Periodic Time Task"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/oneTime"/>

</androidx.constraintlayout.widget.ConstraintLayout>